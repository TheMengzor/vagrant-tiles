#!/bin/bash

PIDFILE=<%= node[:path] %>/var/osm-update.pid

OSM2PGSQL_PGOPTS="-U <%= node[:pg][:user] %> -d <%= node[:pg][:dbname] %> -H localhost"
export PGPASSWORD='<%= node[:pg][:password] %>'

OSM_DIFF=<%= node[:path] %>/var/osmosis/osm-diff.$$.osc

getlock()
{
  if [ -s $1 ]; then
    if [ "$(ps -p `cat $1` | wc -l)" -gt 1 ]; then
      return 1 #false
    fi
  fi

  echo $$ >"$1"
  return 0 #true
}

freelock()
{
  rm "$1"
}

if ! getlock "$PIDFILE"; then
  echo "pid `cat $PIDFILE` still running"
  exit 3
fi

if ! /usr/local/bin/osmosis --read-replication-interval workingDirectory=<%= node[:path] %>/var/osmosis --simplify-change --write-xml-change "$OSM_DIFF" 1>&2 2>> "<%= node[:path] %>/var/log/osmosis.log"; then
  echo osmosis error
  exit 1
fi

if ! /usr/local/bin/osm2pgsql $OSM2PGSQL_PGOPTS --append --slim --hstore --cache 2048 --merc --prefix planet_osm --style <%= node[:path] %>/opt/vector-datasource/osm2pgsql.style --verbose --expire-tiles 18-18 --expire-output "<%= node[:path] %>/var/expired-tiles/expired-tiles-$(date +%Y%m%d%H%M%S).list" --number-processes 1 "$OSM_DIFF" 1>&2 2>> "<%= node[:path] %>/var/log/osm2pgsql-update.log"; then
  echo osm2pgsql error
  exit 2
fi

freelock "$PIDFILE"

/bin/rm -f "$OSM_DIFF"
